@model IEnumerable<Forum.MVC.UI.Models.Posts>


<html>
<head>
</head>
<body>

    <table align="center" id="posttable" width="100%" border="1" cellspacing="0" border="1" cellpadding="5" class="table table-striped table-bordered table-hover">
        <thead>
            <tr class="w3-green">
                <th>Post</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody id="PostList">
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Title</td>
                    <td><a href="/Admin/PostDetails/@item.Id">Open</a></td>
                </tr>
            }
        </tbody>
    </table>
    <script>
        $(document).ready(function () {
            $('#posttable').dataTable({
                "bProcessing": true,
                "bInfo": false
            });
        });
    </script>
</body>
</html>

