@model IEnumerable <Forum.MVC.UI.Models.Rankings>
>
<!DOCTYPE html>
<html>
<head>
</head>
<body>
    <table align="center" id="Leaderboard" width="100%" border="1" cellspacing="0" border="1" cellpadding="5" class="table table-striped table-bordered table-hover">
        <thead>
            <tr class="w3-green">
                <th>Ranking</th>
                <th>Name</th>
                <th>Rating</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.Point pts</td>
                </tr>
            }
        </tbody>
    </table>
    <script>
            $.fn.dataTable.ext.classes.sPageButton = 'button primary_button';
            $(document).ready(function () {
                $('#Leaderboard').dataTable({
                    "bProcessing": true,
                    "bInfo": false
                });
            });
    </script>
</body>
</html>


