@using Forum.Entity
@model IEnumerable<Forum.MVC.UI.Models.Users>

        <fieldset>
            <legend>Students List</legend>
            <table align="center" id="studenttable" width="100%" border="1" cellspacing="0" border="1" cellpadding="5" class="table table-striped table-bordered table-hover">
                <thead>
                    <tr class="w3-green">
                        <th>ID</th>
                        <th>Name</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody id="StudentTable">
                    @foreach (var item in Model)
                    {
                        if (item.UserType == UserType.Student && (item.Status != UserStatus.Pending && item.Status != UserStatus.Blocked))
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td>@item.Name</td>
                                <td><a href="/Admin/StudentProfile/@item.Id">View</a></td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </fieldset>
        <fieldset>
            <legend>Moderators List</legend>
            <table align="center" id="teachertable" width="100%" border="1" cellspacing="0" border="1" cellpadding="5" class="table table-striped table-bordered table-hover">
                <thead>
                    <tr class="w3-green">
                        <th>ID</th>
                        <th>Name</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody id="ModeratorList">
                    @foreach (var item in Model)
                    {
                        if (item.UserType == UserType.Moderator && item.Status != UserStatus.Pending)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td>@item.Name</td>
                                <td><a href="/Admin/ModeratorProfile/@item.Id">View</a></td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </fieldset>
        <script>
            $(document).ready(function () {
                $('#studenttable').dataTable({
                    "bProcessing": true,
                    "bInfo": false
                });
                $('.studenttable_length').addClass('bs-select');
            });
            $(document).ready(function () {
                $('#teachertable').dataTable({
                    "bProcessing": true,
                    "bInfo": false
                });
                $('.teachertable_length').addClass('bs-select');
            });
        </script>


