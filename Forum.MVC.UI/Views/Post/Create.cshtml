@model Forum.Entity.User

@{ 
    Forum.Entity.Post post = (Forum.Entity.Post)ViewBag.CreatePost;
}

<!DOCTYPE html>

<html>

<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="../../Content/w3.css">
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <script src="https://cdn.ckeditor.com/4.10.0/standard/ckeditor.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.0/jquery.min.js"></script>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" />
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/jqueryui/1.12.1/jquery-ui.min.css">
    <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-tokenfield/0.12.0/css/bootstrap-tokenfield.min.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jqueryui/1.12.1/jquery-ui.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-tokenfield/0.12.0/bootstrap-tokenfield.js"></script>

</head>

<body>
    <div class="w3-container">
        <form class="w3-container w3-light-grey w3-round-large w3-padding" style="width: 100%; margin: 0px;padding: 0px;margin-top: 20px;" method="post">
            <table style="width: 90%;margin: 10px;">
                <tr>
                    <td rowspan="3" width="50px"><img src="~/Content/avarter.png" alt="Avatar" class="w3-circle" style="width:50px;width: 50px;"></td>
                    <td>
                        <b>@Model.full_name</b>
                    </td>
                </tr>
            </table>
            <label>Subject</label>
            <input id="Title" name="Title" class="w3-input w3-border-0 w3-round-large" type="text" placeholder="Write your question's subject here" value="@post.title">

            <label>Description</label>
            <textarea id="Body" name="Body" class="w3-input w3-border-0 w3-round-large" maxlength="400" cols="40" rows="10" draggable="false">@post.body</textarea>
            <br>
            <label>Tags</label>
            <input name="Tags" id="Tags" class="w3-input w3-border-0 w3-round-large" type="text" placeholder="Write your question's tags here" value="@post.tags">
            <input name="submit" id="submit" type="submit" class="w3-button w3-block w3-section w3-blue w3-ripple w3-padding w3-round-large" value="Send" disabled>
        </form>
    </div>
</body>

</html>
<script>
    CKEDITOR.replace('Body');
</script>


<script>
    $(document).ready(function() {

        $('#Tags').tokenfield({
            autocomplete: {
                source: ['PHP', 'Java', 'HTML', 'JQuery', 'Javascript', 'CSS', 'Laravel', 'C++', 'C#', 'ASP', 'Python']
            },
            showAutocompleteOnFocus: true
        });

        CKEDITOR.on('instanceReady', function () {
            $('#submit').removeAttr('disabled');
        });
    });
</script>