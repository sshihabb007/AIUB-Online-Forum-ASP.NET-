
@model Forum.Web.Mvc.Models.SinglePost
<!DOCTYPE html>

<html>

<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <script src="https://cdn.ckeditor.com/4.10.0/standard/ckeditor.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.0/jquery.min.js"></script>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" />
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/jqueryui/1.12.1/jquery-ui.min.css">
    <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-tokenfield/0.12.0/css/bootstrap-tokenfield.min.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jqueryui/1.12.1/jquery-ui.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-tokenfield/0.12.0/bootstrap-tokenfield.js"></script>

</head>

<body>
    <form class="w3-container w3-light-grey w3-round-large" style="width: 90%;height:100%;margin: 25px 5%;" method="post">
        <div id="Id" name="Id" value=@Model.Id></div>
        <div id="Status" name="Status" value=@Model.Status></div>
        <table style="width: 90%;margin: 10px 5px;">
            <tr>
                <td rowspan="3" width="50px"><img src="~/Content/aunto.jpg" alt="Avatar" class="w3-circle" style="width:50px;width: 50px;"></td>
                <td>
                    <b id="Name" name="Name">@Model.Name</b>
                </td>
            </tr>
            <tr>
                <td colspan="2">
                    @if (Model.userPoint < 5)
                    {
                        <span class="w3-tag w3-round-large w3-text-white w3-dark-grey"><b>Bronze</b></span>
                    }
                    else if (Model.userPoint >= 5 && Model.userPoint < 15)
                    {
                        <span class="w3-tag w3-round-large w3-text-white w3-blue-gray w3-border"><b>Silver</b></span>
                    }
                    else if (Model.userPoint >= 15 && Model.userPoint < 25)
                    {
                        <span class="w3-tag w3-round-large w3-text-gray w3-amber w3-border"><b>Gold</b></span>
                    }
                    else if (Model.userPoint >= 25)
                    {
                        <span class="w3-tag w3-round-large w3-text-white w3-green w3-border"><b>Elite</b></span>
                    }
                </td>
            </tr>
        </table>
        <label>Subject</label>
        <input id="Title" name="Title" class="w3-input w3-border-0 w3-round-large" type="text" value="@Model.Title" readonly>

        <label>Description</label>
        <textarea id="Body" name="Body" rows="3" cols="40" maxlength="200" readonly>@Model.Body</textarea>
        <br>
        <input id="Tags" name="Tags" class="w3-input w3-border-0 w3-round-large" type="text" value="@String.Join(",",Model.Tags)" readonly>
        
        @if(Model.Status == Forum.Entity.PostActivity.Active)
        {
            <button name="submit" id="submit" type="submit" class="w3-button w3-block w3-section w3-dark-gray w3-ripple w3-padding w3-round-large"><i class="fa fa-lock w3-text-yellow w3-large"> Make Private</i></button>
        }
        else
        {
            <button name="submit" id="submit" type="submit" class="w3-button w3-block w3-section w3-blue w3-ripple w3-padding w3-round-large"><i class="fa fa-unlock-alt w3-text-white w3-large"> Make Public</i></button>
        }
        
    </form>
</body>

</html>
<script>
    CKEDITOR.replace('Body');
</script>


<script>
    $(document).ready(function() {

        $('#Tags').tokenfield({
            autocomplete: {
                source: ['PHP', 'Java', 'HTML', 'JQuery', 'Javascript', 'CSS', 'Laravel', 'C++', 'C#', 'ASP', 'Python']
            }
        });

    });

</script>

