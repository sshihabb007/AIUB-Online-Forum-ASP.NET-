@model Forum.MVC.UI.Models.ChangeInfoRequests
@using Forum.Entity
<fieldset>
    <legend>Pending Requests</legend>
    <table style="text-align:center;" id="Review" width="100%" border="1" cellspacing="0" border="1" cellpadding="5" class="table table-striped table-bordered table-hover">
        <thead>
            <tr class="w3-green">
                <th>Attribute Name</th>
                <th>Previous Value</th>
                <th>Requested Value</th>
                <th>Action</th>
            </tr>
        </thead>
        <tr>
            <td>@Model.FieldName</td>
            <td> @Model.NameOfUser
        </td>
        <td>@Model.FieldValue
        </td>

        <td><a href="/Moderator/AproveReview/@Model.Id" onclick="permission('APR')">Approve</a>&emsp;|&emsp;<a href="/Admin/RejectReview/@Model.Id" onclick="permission('REJ')">Reject</a></td>
    </tr>
</table>
</fieldset>

<script>
            $(document).ready(function () {
                $('#Review').dataTable({
                "bProcessing": true,
                "bInfo": false
            });
        $('.teachertable_length').addClass('bs-select');
    });
    function permission(con) {
        if (confirm("Are you sure?")) {
            if (con == 'APR') {
                return true;
            }
            else if (con == 'REJ') {
                return true;
            }
        }
    }
</script>


