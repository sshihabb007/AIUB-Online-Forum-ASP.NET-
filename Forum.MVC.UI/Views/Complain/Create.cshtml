@model IEnumerable<Forum.Web.Mvc.Models.ComplainSearchUser>
@{
    Forum.Web.Mvc.Models.CustomComplain complain = (Forum.Web.Mvc.Models.CustomComplain)ViewBag.CreateComplain;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>
<body>

    <form class="w3-container w3-card-4 w3-light-grey w3-text-blue w3-margin w3-round-large" method="post">
        <h2 class="w3-center">New Complain</h2>

        <div class="w3-row w3-section">
            <div class="w3-col" style="width:50px"><i class="w3-xxlarge fa fa-user"></i></div>
            <div class="w3-rest">
                <input id="Id" name="Id" class="w3-input w3-border w3-round-large" type="text" placeholder="User ID" value="@complain.Id">
            </div>
        </div>

        <div class="w3-row w3-section">
            <div class="w3-col" style="width:50px"><i class="w3-xxlarge fa fa-envelope-o"></i></div>
            <div class="w3-rest">
                <input class="w3-input w3-border w3-round-large" id="Subject" name="Subject" type="text" placeholder="Subject" value="@complain.Subject">
            </div>
        </div>

        <div class="w3-row w3-section">
            <div class="w3-col" style="width:50px"><i class="w3-xxlarge fa fa-pencil"></i></div>
            <div class="w3-rest">
                <textarea class="w3-input w3-border w3-round-large" id="Description" name="Description" type="text" placeholder="Desciption" maxlength="400" cols="10" rows="4">@complain.Description</textarea>
            </div>
        </div>

        <button type="submit" class="w3-button w3-block w3-section w3-blue w3-ripple w3-padding">Send</button>

    </form>

    <div class="w3-container">
        <table class="w3-table w3-striped w3-border">
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="Search">
                        <td><img src="@Url.Content(item.Photo)" class="w3-circle" width="40px" height="40px"> @item.Name [ ID : @item.Id ]</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</body>
</html>

<script>
    $(document).ready(function () {
        function Contains(text_one, text_two) {
            if (text_one.indexOf(text_two) != -1)
                return true;
        }
        $('#Id').keyup(function () {
            var searchText = $('#Id').val();
            $('.Search').each(function () {
                if (!Contains($(this).text().toLowerCase(), searchText.toLowerCase())) {
                    $(this).hide();
                }
                else {
                    $(this).show();
                }
            });
        });

    });
</script>