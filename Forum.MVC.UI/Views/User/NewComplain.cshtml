@model Forum.MVC.UI.Models.Complains


<div style="width: 80%;" class="w3-container w3-card-4 w3-light-grey w3-text-blue w3-margin w3-round-large">
        @using (Html.BeginForm("NewComplain","user",FormMethod.Post,new { @id="complain"}))
        {
            <h2 class="w3-center">New Complain</h2>

            <div class="w3-row w3-section">
                <div class="w3-col" style="width:50px"><i class="w3-xxlarge fa fa-user"></i></div>
                <div class="w3-rest">
                    @Html.TextBoxFor(u=>u.ToUser,new { @class="w3-input w3-border w3-round-large", @name="first", @type="text", @placeholder="User ID",@required="required"})
                </div>
            </div>

            <div class="w3-row w3-section">
                <div class="w3-col" style="width:50px"><i class="w3-xxlarge fa fa-envelope-o"></i></div>
                <div class="w3-rest">
                    @Html.TextBoxFor(u=>u.Subject,new { @class = "w3-input w3-border w3-round-large", @placeholder = "Subject", @required = "required" })
                </div>
            </div>

            <div class="w3-row w3-section">
                <div class="w3-col" style="width:50px"><i class="w3-xxlarge fa fa-pencil"></i></div>
                <div class="w3-rest">
                    @Html.TextAreaFor(u=>u.Description,new {@class="w3-input w3-border w3-round-large", @name="message", @type="text", @placeholder="Desciption", @maxlength="400", @cols="10", @rows="4", @required = "required" })
                </div>
            </div>
            <button onclick="return IdValidate();" type="submit" class="w3-button w3-block w3-section w3-blue w3-ripple w3-padding">Send</button>
        }
</div>
