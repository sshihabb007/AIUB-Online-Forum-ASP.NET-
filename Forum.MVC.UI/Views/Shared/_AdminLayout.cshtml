<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Index</title>
    @Styles.Render("~/MyStyle")
    @Scripts.Render("~/MyScript")
    <link href="~/Content/DataTables/css/jquery.dataTables.min.css" rel="stylesheet" />
    <link href="~/Content/DataTables/css/dataTables.bootstrap4.min.css" rel="stylesheet" />
    <link href="~/Content/DataTables/css/dataTables.jqueryui.min.css" rel="stylesheet" />
    <link href="~/Content/jquery-ui.min.css" rel="stylesheet" />
    <script src="~/Scripts/DataTables/jquery.dataTables.min.js"></script>
    <script src="~/Scripts/DataTables/dataTables.bootstrap4.min.js"></script>
    <style>
        .text-align {
            text-align: left;
        }

        a {
            padding: 0;
            margin: 0;
            text-decoration: none;
        }

            a:hover {
                cursor: pointer;
                font-weight: bolder;
                text-decoration: none;
            }

        .header:hover {
            color: white;
        }

        .mainmenu:hover {
            cursor: pointer;
        }

        .useroption, .dashbordoption, .Reportopion {
            display: none;
        }
    </style>
</head>
<body>
    <div>
        <nav class="navbar navbar-inverse w3-teal" style="border-color:teal">
            <div class="container-fluid">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <span class="topnav-icons fa fa-menu w3-hide-large w3-left w3-bar-item w3-button" id="mainmenu" style="font-size:xx-large"> </span>
                    <span class="navbar-brand w3-text-white"> Online Forum</span>
                </div>
                <div class="collapse navbar-collapse" id="myNavbar">
                    <ul class="nav navbar-nav w3-text-white">
                        <li><a href="/Admin/Index" class="w3-text-white"><spann class="glyphicon glyphicon-home"></spann> Home</a></li>
                    </ul>
                    <ul class="nav navbar-nav navbar-right">
                        <li><a href="/Admin/PostList" class="w3-text-white"><span class="glyphicon glyphicon-dashboard"></span> Dashbord</a></li>
                        <li><a href="/Login/Logout" class="w3-text-white"><span class="glyphicon glyphicon-log-out"></span> Logout</a></li>
                    </ul>
                </div>
            </div>
        </nav>
    </div>
    <div class="modal-body row bg-white" style="padding-top:0;margin-top:0;">
        <table style="width: 100%;height: 100%; margin:0;padding:0;background-color:white;" class="w3-mobile">
            <tr style="width: 100%;background-color:white;">
                <td style="width:18%;position: absolute; box-sizing:inherit; min-width:0px;float:left;padding:0;" class="adminPanel" id="adminmenu">
                    <table style="margin-top: 0px;padding-top: 0px; table-layout:inherit;border-collapse:collapse;box-sizing:inherit;background-color:white;min-width:100%;" class="w3-table adminPanel" id="adminmenu">
                        <tbody style="background-color:white;">
                            <tr class="bg-white position-fixed" style="min-width:19%;">
                                <div class="panel-group" id="AdminPnl" role="tablist" aria-multiselectable="true">
                                    <div class="panel panel-default">
                                        <div class="panel-heading" style="background-color: #16a765;color:white;" role="tab" id="tab">
                                            <h5 class="panel-title">
                                                <a data-toggle="collapse" id="usertablist" href="#User" aria-expanded="false" aria-controls="User" class="collapsed">
                                                    <i class="fa fa-user"></i>&nbsp;Users
                                                    <i class="pull-right fa fa-caret-down" id="usertab"></i>
                                                </a>
                                            </h5>
                                        </div>
                                        <div id="User" class="panel-collapse collapse" role="tabpanel" aria-labelledby="tab" aria-expanded="false" style="height: 0px;">
                                            <div>
                                                <a href="/Admin/StudentList" class="list-group-item">
                                                    &nbsp;&nbsp;&nbsp;Students
                                                </a>
                                                <a href="/Admin/ModeratorList" class="list-group-item">
                                                    &nbsp;&nbsp;&nbsp;Moderator
                                                </a>
                                                <a href="/Admin/UserStatusChange" class="list-group-item">
                                                    &nbsp;&nbsp;&nbsp;Change User Status
                                                </a>
                                                <a href="/Admin/InfoChangeList" class="list-group-item">
                                                    &nbsp;&nbsp;&nbsp;Information Change Request
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="panel panel-default">
                                        <div class="panel-heading" style="background-color: #16a765;color:white;" role="tab" id="DashTab">
                                            <h5 class="panel-title">
                                                <a data-toggle="collapse" href="#Dash" id="dashbord" aria-expanded="false" aria-controls="Dash" class="collapsed">
                                                    <i class="glyphicon glyphicon-dashboard"></i>&nbsp;Dashboard
                                                    <i class="pull-right fa fa-caret-down" id="dashbordoption"></i>
                                                </a>
                                            </h5>
                                        </div>

                                        <div id="Dash" class="panel-collapse collapse" role="tabpanel" aria-labelledby="DashTab" aria-expanded="false" style="height: 0px;">
                                            <div>
                                                <a href="/Admin/PostList" class="list-group-item">&nbsp;Forum's Feed</a>
                                                <a href="/Admin/ManagePost" class="list-group-item">&nbsp;Manage Posts</a>
                                                <a href="/Admin/Complain" class="list-group-item">&nbsp;Complains</a>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="panel panel-default">
                                        <div class="panel-heading" style="background-color: #16a765;color:white;" role="tab" id="Report">
                                            <h5 class="panel-title">
                                                <a data-toggle="collapse" href="#Reportls" aria-expanded="false" aria-controls="Reportls" class="collapsed">
                                                    <i class="fa fa-edit"></i> Reports
                                                    <i class="pull-right fa fa-caret-down" id="Reportopion"></i>
                                                </a>
                                            </h5>
                                        </div>
                                        <div id="Reportls" class="panel-collapse collapse" role="tabpanel" aria-labelledby="Report" aria-expanded="false">
                                            <div>
                                                <a href="/Admin/LeaderBoard" class="list-group-item">&nbsp;Leaderboard</a>
                                                <a href="/Admin/Statistics" class="list-group-item">&nbsp;Statistics</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </tr>
                    </table>
                <td class="mainpanel" style="padding-right:1%">
                    @RenderBody()
                </td>
            </tr>
        </table>
    </div>
    <script>
        $.fn.dataTable.ext.classes.sPageButton = 'button primary_button';
        var panel = false;
        $(document).ready(function () {
            $("#mainmenu").click(function () {
                if (!panel) {
                    $("#adminmenu").css("display", "block");
                    panel = true;
                }
                else if (panel) {
                    $("#adminmenu").css("display", "none");
                    panel = false;
                }
            });
        });
        $(document).ready(function () {
            $("#usertablist").click(function () {
                if ($("#usertab").hasClass("fa fa-caret-down")) {
                    $("#usertab").removeClass("fa fa-caret-down").addClass("fa fa-caret-up");
                }
                else if ($("#usertab").hasClass("fa fa-caret-up")) {
                    $("#usertab").removeClass("fa fa-caret-up").addClass("fa fa-caret-down");
                }
            });
        });
        $(document).ready(function () {
            $("#dashbord").click(function () {
                if ($("#dashbordoption").hasClass("fa fa-caret-down")) {
                    $("#dashbordoption").removeClass("fa fa-caret-down").addClass("fa fa-caret-up");
                }
                else if ($("#dashbordoption").hasClass("fa fa-caret-up")) {
                    $("#dashbordoption").removeClass("fa fa-caret-up").addClass("fa fa-caret-down");
                }
            });
        });
        $(document).ready(function () {
            $("#Report").click(function () {
                if ($("#Reportopion").hasClass("fa fa-caret-down")) {
                    $("#Reportopion").removeClass("fa fa-caret-down").addClass("fa fa-caret-up");

                }
                else if ($("#Reportopion").hasClass("fa fa-caret-up")) {
                    $("#Reportopion").removeClass("fa fa-caret-up").addClass("fa fa-caret-down");
                }
            });
        });
    </script>
</body>
</html>

